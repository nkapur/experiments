{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SSMRestrictedAccess",
      "Effect": "Allow",
      "Action": ["ssm:PutParameter", "ssm:GetParameter"],
      "Resource": [
        "arn:aws:ssm:us-west-2:396724649279:parameter/ami/*/*"
      ]
    },
    {
      "Sid": "AMIRestricted",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeImages",
        "ec2:DeregisterImage",
        "ec2:RegisterImage",
        "ec2:CreateImage",
        "ec2:ModifyImageAttribute"
      ],
      "Resource": "*"    },
    {
      "Sid": "PackerInstanceLifecycle",
      "Effect": "Allow",
      "Action": [
        "ec2:RunInstances",
        "ec2:TerminateInstances",
        "ec2:StopInstances",
        "ec2:StartInstances",
        "ec2:CreateVolume",
        "ec2:AttachVolume",
        "ec2:CreateKeyPair",
        "ec2:CreateTags",
        "ec2:DeleteKeyPair",
        "ec2:DeleteVolume",
        "ec2:DescribeInstances",
        "ec2:DescribeImages",
        "ec2:DescribeRegions",
        "ec2:DescribeVolumes",
        "ec2:DescribeSecurityGroups",
        "ec2:CreateSecurityGroup",
        "ec2:DeleteSecurityGroup",
        "ec2:DescribeKeyPairs",
        "ec2:AuthorizeSecurityGroupIngress",
        "ec2:ImportKeyPair",
        "ec2:DeleteKeyPair"
      ],
      "Resource": "*"
    }
  ]
}
